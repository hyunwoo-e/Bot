<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bot.api.conversation.profile.PartyDAO">
    <resultMap id="Profile" type="java.util.HashMap">
        <result javaType="java.lang.String" column="partyName" property="partyName"/>
        <result javaType="java.lang.String" column="partyType" property="partyType"/>
        <result javaType="java.lang.String" column="telephone" property="telephone"/>
        <result javaType="java.lang.String" column="address" property="address"/>
        <result javaType="java.lang.String" column="email" property="email"/>
    </resultMap>

    <select id="selectPartyByName" resultMap="Profile">
        SELECT
        party_name AS partyName,
        party_type AS partyType,
        telephone AS telephone,
        address AS address,
        email AS email
        FROM
        tb_party
        WHERE
        party_name = #{partyName}
        LIMiT 0, 1
    </select>
</mapper>